<h3><%= t('admin.index.welcome') + "  " + current_staff.staff_name %></h3>
<%= link_to t('admin.index.logout'), signout_path, method: :delete %>
<% if flash.keys.any? %>
  <% [:notice, :error].each do |t| %>
    <%= flash[t] %>
  <% end %>
<% end %>
<ul>
	<%= @staffs.each_with_index do |staff, index| %>
	<li><%= 'stt' + (index+1).to_s %>:<%= staff.salon.nil? ?  "" : staff.salon.salon_name %>, <%= staff.staff_name %>, <%= staff.mail_address %></li>
	<% end %>
</ul>